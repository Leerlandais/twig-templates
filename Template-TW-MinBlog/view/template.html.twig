            </div>
        </div>
    </nav>
{% endblock %}{# end SectNav #}


{% block main %}
    {% block sideBar %}{% endblock %}
{% endblock %}

{% block footer %}
    <footer class="w-full border-t bg-white pb-12">
        <div
                class="relative w-full flex items-center hidden md:flex md:pb-12"
                x-data="getCarouselData()"
        >
            <button
                    class="absolute bg-blue-800 hover:bg-blue-700 text-white text-2xl font-bold hover:shadow rounded-full w-16 h-16 ml-12"
                    @click="decrement()">
                &#8592;
            </button>

            <template x-for="image in images.slice(currentIndex, currentIndex + 6)" :key="image">
                <img class="w-1/6 hover:opacity-75" :src="image" alt="Carousel Image">
            </template>

            <button
                    class="absolute right-0 bg-blue-800 hover:bg-blue-700 text-white text-2xl font-bold hover:shadow rounded-full w-16 h-16 mr-12"
                    @click="increment()">
                &#8594;
            </button>
        </div>
    </footer>
{% endblock %} {# end Footer #}



{% block carouselData %}
    <script>
        function getCarouselData() {
            return {
                currentIndex: 0,
                images: [
                    'https://placehold.co/800x800',
                    'https://placehold.co/800x800',
                    'https://placehold.co/800x800',
                    'https://placehold.co/800x800',
                    'https://placehold.co/800x700',
                    'https://placehold.co/800x800',
                    'https://placehold.co/800x800',
                    'https://placehold.co/800x800',
                    'https://placehold.co/800x800',
                ],
                increment() {
                    // Reset to the start if at the end, otherwise move forward
                    this.currentIndex = (this.currentIndex + 1) % (this.images.length - 4);
                },
                decrement() {
                    // Wrap around to end if going below zero, otherwise move backward
                    this.currentIndex = (this.currentIndex - 1 + this.images.length - 4) % (this.images.length - 4);
                },
            }
        }
    </script>
{% endblock %}{# end CarouselData #}
